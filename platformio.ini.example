[env:nodemcu-32s]
platform = espressif32
board = nodemcu-32s
framework = arduino
monitor_speed = 115200
board_build.filesystem = littlefs
board_build.partitions = esp32_custom_partition_4mb.csv
lib_deps = 
	gyverlibs/FastBot2@^1.0.12
	gyverlibs/EncButton@^3.6.3
	milesburton/DallasTemperature@^3.11.0
	olikraus/U8g2@^2.35.30
	bblanchon/ArduinoJson@^7.2.0
	ESP32Async/AsyncTCP
	ESP32Async/ESPAsyncWebServer
	OneWire=https://github.com/PaulStoffregen/OneWire.git
build_unflags = 
	-std=gnu++11
build_flags = 
	-D SOFTAP_SSID="ESP32MyHeat"
	-D SOFTAP_PASSWORD="12345678"
	-D WIFI_SSID=""
	-D WIFI_PASSWORD=""
	-D WIFI_RECONNECT_INTERVAL=3000
	-D MDNS_ADDRESS="esp32-myheat"
	-D FUNCTION_COUNT=1
	-D RELAY_COUNT=2
	-D RELAY_PINS={32,33,25,26}
	-D RELAY_TRIGGER={0,0,0,0}
	-D TEMPERATURE_COUNT=6
	-D TEMPERATURE_PIN=23
	-D TEMPERATURE_MIN=5
	-D TEMPERATURE_MAX=90
	-D TEMPERATURE_ERROR=-127.00
	-D SMOKE_SENSOR_THRESHOLD=2000
	-D SMOKE_SENSOR_PIN=36
	-D SMOKE_SENSOR_ENABLED=true
	-D TELEGRAM_BOT_ENABLED=true
	-D TELEGRAM_BOT_ALERT_NOTIFICATIONS=true
	-D TELEGRAM_BOT_TOKEN=""
	-D REGISTER_PHRASE="test123"
	-D NTP_SERVER="pool.ntp.org"
	-D NTP_IANA="Europe/Kiev"
	-D NTP_OFFSET=7200
	-D NTP_DAYLIGHT_OFFSET=3600
	-D NTP_SYNC_INTERVAL=3600000
	-D HARDWARE_IO_IS_ENABLED=true
	-D OLED_ADDRESS=0x78
	-D OLED_SDA=21
	-D OLED_SCL=22
	-D SCREEN_POWER_SAVE_INTERVAL=30000
	-D ENC_A=19
	-D ENC_B=4
	-D ENC_BTN=18
	-D INVERT_ENCODER=false
	-D TN_INDEX=255
	-D TEMP_UNKNOWN=254
	-D RELAY_UNKNOWN=255
	-std=gnu++2a